fn assert(a: u32) : void;

fn sign(a: int) : int {
    if (a > 0) {
        return 1;
    } else if (a < 0) {
        return -1;
    } else {
        return 0;
    }
}

fn else_if(c: i32) : i32 {
    if (c == 0) {
        return 0;
    } else if (c == 1) {
        return 1;
    } else {
        return 2;
    }
    return -100;
}

fn main(argc: int, argv: char**) : int {
    if (argc > 0) {
        @assert(1);
    } else {
        @assert(0);
    }
    @assert(else_if(1) == 1);
    return 0;
}
