fn sign(a: int) : int {
    var ret: int;
    if (a > 0) {
        ret = 1;
    } else if (a < 0) {
        ret = -1;
    } else {
        ret = 0;
    }
    return ret; // TODO: fix return inside if else
}

fn main(argc: int, argv: char**) : int {
    var a: int = 100;
    var b: int = argc;
    var ret: int;
    if (b > 1) {
        ret = sign(a);
    } else {
        ret = 0;
    }
    return ret;
}
